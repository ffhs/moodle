{{!
    @template block_glossary_random/refreshbutton

    This template renders the refresh button for the glossary random block.

    Example context (json):
    {
        "showrefreshbutton": "true"
    }
}}
{{#showrefreshbutton}}
    <button class="btn btn-secondary mt-3 mb-2" id="refresh_glossary_button" type="submit">
        <i aria-hidden="true" class="icon fa fa-refresh fa-fw "></i> {{#str}} refresh, core {{/str}}
    </button>
{{/showrefreshbutton}}