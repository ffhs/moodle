{{!
    @template block_glossary_random/glossary_random

    This template renders the content of the glossary_random block.

    Classes required for JS:
        * none

        Data attributes required for JS:
        * none

        Context variables required for this template:
        * none

        Optional context variables for this template:
        * none

    Example context (json):
    {
        "content": "<h3>Adrian</h3><div class="no-overflow"><p dir="ltr" style="text-align:left;">He's from Brig</p>"
    }
}}
<div id="block-glossaryrandom-{{uniqid}}" data-region="randomglossaryblock" data-blockinstanceid="{{blockinstanceid}}" data-reloadtime="{{reloadtime}}">
    {{> block_glossary_random/view}}
    {{> block_glossary_random/refreshbutton}}
</div>
{{#js}}
require(
[
    'jquery',
    'block_glossary_random/main',
],
function(
    $,
    Main
) {
    var root = $('#block-glossaryrandom-{{uniqid}}');

    Main.init(root);
});
{{/js}}
