{{!
    @template block_glossary_random/view

    This template renders the view for the starred courses block.

    Example context (json):
    {
        "showconcept": "true",
        "concept": "This is a heading.",
        "definition": "This is an example text."
    }
}}
<div class="card-text content mt-3" data-region="randomglossaryentry-content">
    {{#showconcept}}
        <h3>{{{ concept }}}</h3>
    {{/showconcept}}

    {{{ definition }}}

    {{#showrefreshbutton}}
        <button class="btn btn-secondary mt-3 mb-2" id="refresh_glossary_button" type="submit">
            <i aria-hidden="true" class="icon fa fa-refresh fa-fw "></i> <span class="sr-only">{{#str}} refresh, core {{/str}}</span>
        </button>
    {{/showrefreshbutton}}
</div>